    "@nestjs/core": "8.0.6",
    "@nestjs/graphql": "8.0.2",
    "@nestjs/platform-express": "8.0.6",
    "@nestjs/schedule": "1.0.1",
    "@nestjs/typeorm": "8.0.2",
    "apollo-server-express": "^2.25.2",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "date-fns": "2.23.0",
    "dotenv": "^8.2.0",
    "graphql": "15.5.1",
    "graphql-tools": "8.1.0",
    "graphql-type-json": "^0.3.2",
    "lodash": "4.17.21",
    "nestjs-pino": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "pg": "8.7.1",
    "pino-pretty": "^5.1.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "7.3.0",
    "typeorm": "0.2.37",
    "typescript": "4.3.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.1",
